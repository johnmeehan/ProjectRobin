<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title)%>
        <%= yield(:title) %>
      <% else %>
        ProjectRobin.org
      <% end %>
    </title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>

    <div class="container">
      <%= render partial: 'layouts/header' %>
      <%= flash_messages %>
      <div class="row">
				<div class="col-md-2">
					<ul class="list-group">
						<%= yield :sidebar %>
					</ul>
				</div>	
				<div class="col-md-10">
					<%= yield %>
				</div>		
			</div>
    </div>
    
  </body>
</html>