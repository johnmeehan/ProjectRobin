<%= form_for [@project, @ticket], html: { multipart: true } do |f| %>
  <% if @ticket.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@ticket.errors.count, "error") %>
         prohibited this ticket from being saved:</h2>
       <ul>
       <% @ticket.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  
  <div id="files" class="form-group">
    <% number = 0 %>
    <%= render partial: "files/form", locals: {number: number} %>
  </div>
  <div class="form-group">
    <%= link_to "Add another file", 'javascript:', id: "add_another_file",class: 'btn btn-default btn-success btn-sm'  %>
  </div>
  
  <%= f.submit class: 'btn btn-default btn-primary btn-block' %>
<% end %>
