<div class="row">
	<div class="col-md-2">
		<ul class="list-group">
			<li class="list-group-item">
				<%= link_to "Edit User", edit_admin_user_path(@user) %>		
			</li>
			<li class="list-group-item">
				<%= link_to 'Permissions' ,admin_user_permissions_path(@user) %>		
			</li>
			<li class="list-group-item">
				<%= link_to "Delete User", admin_user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" } %>
			</li>
		</ul>
		
	</div>
	<div class="col-md-10">
		<h2><%= @user.name %></h2>
		<p>Email: <%= @user.email %></p>
		<p>Joined: <%= @user.created_at.strftime("%d/%m/%Y ") %></p>


	</div>
</div>
